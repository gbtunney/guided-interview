{
    "name": "@gbt/home-assistant",
    "version": "0.0.0",
    "private": true,
    "description": "Homeassistant Scripts",
    "scripts": {
        "\n========== HOME-ASSISTANT >> ==========": "",
        "sh": "ssh homeassistant",
        "ui": "cross-var pnpm exec pnpm open:firefox $npm_package_config_homeassistant_ui",
        "ui:settings": "cross-var pnpm exec pnpm open:firefox $npm_package_config_homeassistant_ui/config/dashboard",
        "device:sheet": "cross-var pnpm exec open $npm_package_config_spreadsheet",
        "\n========== CLI >> ==========": "",
        "cli": "pnpm run sh ha",
        "cli:help": "pnpm run cli --help",
        "ha:updates:list": "pnpm cli available-updates",
        "ha:restart:all": "pnpm ha:core:restart && ha:supervisor:restart",
        "\n========== CORE >> ==========": "",
        "ha:core": "pnpm cli core",
        "ha:core:check": "pnpm ha:core check",
        "ha:core:update": "pnpm ha:core update",
        "ha:core:restart": "pnpm ha:core restart",
        "ha:core:rebuild": "pnpm ha:core rebuild",
        "\n========== SUPERVISOR >> ==========": "",
        "ha:supervisor": "pnpm cli supervisor",
        "ha:supervisor:check": "pnpm ha:supervisor info",
        "ha:supervisor:update": "pnpm ha:supervisor update",
        "ha:supervisor:restart": "pnpm ha:supervisor restart",
        "\n========== ADDONS >> ==========": "",
        "ha:addons:list": "pnpm cli addons",
        "ha:addons:update": "pnpm cli addons update --",
        "ha:addons:updates:list": "pnpm cli addons available-updates",
        "ha:addons:help": "pnpm cli addons --help",
        "\n========== CONTAINERS >> ==========": "",
        "containers:list": "pnpm sh docker ps -a",
        "containers:core:sh": "pnpm sh 'docker exec -it homeassistant'",
        "\n========== UTILITIES >> ==========": "",
        "hostname": "pnpm containers:core:sh hostname -i",
        "open:chrome": "open -a /Applications/Google\\ Chrome.app/Contents/MacOS/Google\\ Chrome  --url",
        "open:firefox": "open -a /Applications/Firefox.app/Contents/MacOS/firefox",
        "\n========== CLASP >> ==========": "",
        "clasp:status": "pnpm exec clasp status --ignore ./.claspignore ",
        "clasp:push": "pnpm exec clasp push  $npm_package_config_document_id",
        "clasp:login": "pnpm clasp login",
        "clasp:open:parent": "cross-var pnpm exec open https://docs.google.com/spreadsheets/d/$npm_package_config_parent_id",
        "clasp:open:script": "pnpm exec clasp open",
        "clasp:help": "pnpm exec clasp --help",
        "\n========== BUILD >> ==========": "",
        "build": "pnpm build:ts && pnpm build:esbuild && pnpm build:cp &&  pnpm clasp:status",
        "build:esbuild": "pnpm exec tsx  ./esbuild.ts",
        "build:cp": "cp ./appsscript.json ./dist ",
        "build:ts": "tsc --build",
        "\n========== DEV >> ==========": "",
        "dev": "tsc  --build --watch",
        "\n========== PUBLISH >> ==========": "",
        "build:deploy": "pnpm clean && pnpm build && pnpm clasp:push",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:build",
        "clean:build": "rm -R -f dist && rm -R -f types",
        "clean:ts": "tsc --build --clean",
        "\n========== CODE STYLE >> ==========": "",
        "prettier": "cross-var prettier {$npm_package_config_prettier_path}.{$npm_package_config_prettier_extensions} --ignore-path ./.gitignore --write",
        "\n========== CHECK >> ==========": "",
        "check": "pnpm build:ts",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm prettier"
    },
    "devDependencies": {
        "@google/clasp": "^2.4.2",
        "@types/google-apps-script": "^1.0.83",
        "cross-var": "^1.1.0",
        "dotenv-cli": "^8.0.0",
        "esbuild": "^0.23.0",
        "tsx": "^4.19.0",
        "typescript": "^5.6.3"
    },
    "type": "module",
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    },
    "engines": {
        "docker": ">=28.2.0",
        "node": ">=18.7.0 <22.0.0",
        "pnpm": ">=10.0.0"
    },
    "config": {
        "parent_id": "1aDs1AWQ1PRs3-S_aikYVVE5Uecph6hlXuHhjVdyeZf4",
        "spreadsheet": "https://docs.google.com/spreadsheets/d/1hc20vN-Wjua246a5isvj_0qQmEQjVAbvTzwioo6n9E0/edit?usp=sharing",
        "homeassistant_ui": "http://homeassistant.local:8123"
    }
}
