{
    "name": "@snailicide/netgear-reboot",
    "version": "0.0.0",
    "private": false,
    "description": "Netgear does not provide a cli command for rebooting this router so this is an attempted workaround",
    "scripts": {
        "\n========== RUN >> ==========": "",
        "reboot": "pnpm exec node ./dist/index.mjs",
        "dev:reboot": "pnpm exec tsx ./src/index.ts",
        "open": "open http://192.168.1.1/",
        "\n========== DEVELOPMENT >> ==========": "",
        "dev": "pnpm build:ts --watch",
        "dev:ts": "pnpm build:ts --watch",
        "dev:rollup": "rollup --watch --config ./rollup.config.js",
        "\n========== BUILD >> ==========": "",
        "build": "pnpm build:ts && pnpm build:rollup",
        "build:ts": "pnpm exec tsc --build",
        "build:rollup": "rollup --config ./rollup.config.js",
        "\n========== TEST >> ==========": "",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:repo": "pnpm exec ls $(git rev-parse --show-toplevel)",
        "\n========== CLEAN >> ==========": "",
        "clean": "pnpm clean:ts && pnpm clean:build",
        "clean:ts": "pnpm exec tsc --build --clean",
        "clean:build": "pnpm exec rm -rf ./dist ./types",
        "\n========== RELEASE >> ==========": "",
        "release": "pnpm run prerelease && pnpm changeset",
        "prerelease": "pnpm run build && pnpm run fix && pnpm run check && pnpm test",
        "\n========== CHECK >> ==========": "",
        "check": "pnpm check:self",
        "check:md": "pnpm run lint:md",
        "check:self": "pnpm lint",
        "\n========== FIX >> ==========": "",
        "fix": "pnpm fix:self",
        "fix:md": "pnpm run lint:md --fix",
        "fix:self": "pnpm prettier --write && pnpm lint --fix",
        "\n========== CODE STYLE >> ==========": "",
        "prettier": "prettier --ignore-path ./.gitignore --no-error-on-unmatched-pattern .",
        "lint": "pnpm exec eslint .",
        "lint:md": "pnpm exec markdownlint-cli2 '{./*,./**/*}.md' '#**/node_modules/**' '#packages/test-package/**/*' ",
        "postinstall": "pnpm exec puppeteer  browsers install chrome"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "dependencies": {
        "@snailicide/cli-app": "^0.4.0",
        "@types/cli-progress": "^3.11.6",
        "ora": "^8.2.0",
        "puppeteer": "^24.8.2",
        "puppeteer-core": "^24.8.2",
        "zod": "^3.25.23"
    },
    "devDependencies": {
        "@snailicide/build-config": "^1.4.0",
        "@types/node": "^22.13.1",
        "cross-var": "^1.1.0",
        "dotenv": "^16.5.0",
        "rollup": "^4.34.6",
        "tsx": "^4.19.4",
        "typescript": "^5.7.3",
        "vitest": "^3.0.5"
    },
    "type": "module",
    "exports": {
        ".": {
            "default": "./dist/index.js",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        }
    },
    "author": {
        "name": "Gillian Tunney",
        "email": "gbtunney@mac.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/gbtunney/gbt-boilerplate"
    },
    "homepage": "https://github.com/gbtunney/gbt-boilerplate",
    "packageManager": "pnpm@10.9.0",
    "engines": {
        "node": ">=18.7.0 <22.0.0",
        "pnpm": ">=9.0.0"
    },
    "bin": {
        "reboot": "node ./dist/index.mjs"
    },
    "files": [
        "CHANGELOG.md",
        "dist",
        "types"
    ],
    "keywords": [
        "boilerplate"
    ],
    "config": {
        "prettier": {
            "extensions": "ts,js,cjs,mjs,cts,mts,sh,html,json,yaml,yml,graphql,md",
            "path": "*,**/*",
            "config": "prettier.config.js"
        }
    },
    "commonjs": "./dist/index.cjs"
}
